<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <hr/>
        <div class="table-responsive ">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Course ID</th>
                        <th scope="col">Course Code</th>
                        <th scope="col">Course Description</th>
                    </tr>
                </thead>
                <tbody>
                {{#each course}}
                <tr>
                    <td><a href="/course/{{courseId}}">{{courseId}}</a></td>
                    <td>{{courseCode}}</td>
                    <td><a href="/student/course={{courseId}}">{{courseDescription}}</a></td>
                </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless course}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}

    </div>
</div>
